<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nbpt.music.mapper.UserMapper">
    <select id="list" resultType="cn.edu.nbpt.music.pojo.entity.User">
        select * from user
        <where>
            <if test="id!= null and id != ''">
                id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username like concat('%',#{username},'%')
            </if>
        </where>
    </select>

    <insert id="add">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">
                username,
            </if>
            <if test="password != null and password != ''">
                password,
            </if>
            <if test="email != null and email != ''">
                email,
            </if>
            <if test="gender != null and gender != ''">
                gender,
            </if>
            <if test="age != null">
                age,
            </if>
            <if test="avatar != null and avatar != ''">
                avatar,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">
                #{username},
            </if>
            <if test="password != null and password != ''">
                #{password},
            </if>
            <if test="email != null and email != ''">
                #{email},
            </if>
            <if test="gender != null and gender != ''">
                #{gender},
            </if>
            <if test="age != null">
                #{age},
            </if>
            <if test="avatar != null and avatar != ''">
                #{avatar},
            </if>
        </trim>
    </insert>

    <update id="update">
        update user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="gender != null and gender != ''">
                gender = #{gender},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from user
        where id in
        <foreach collection="ids" item="ids" open="(" close=")" separator=",">
            #{ids}
        </foreach>
    </delete>
</mapper>