<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nbpt.music.mapper.MenuSongMapMapper">

    <select id="list" resultType="cn.edu.nbpt.music.pojo.entity.MenuSongMap">
        SELECT * FROM menu_song_map
        <where>
            <if test="menuId != null ">
                menu_id = #{menuId}
            </if>
            <if test="songId != null ">
                and song_id = #{songId}
            </if>
        </where>
    </select>

    <insert id="add">
        insert into menu_song_map
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="menuId != null">
                menu_id,
            </if>
            <if test="songId != null">
                song_id,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="menuId != null">
                #{menuId},
            </if>
            <if test="songId != null">
                #{songId},
            </if>
        </trim>
    </insert>

    <delete id="delete">
        delete from menu_song_map
        where song_id in
        <foreach collection="ids" item="ids" open="(" close=")" separator=",">
            #{ids}
        </foreach>
        and menu_id = #{menuId}
    </delete>

    <delete id="deleteAll">
        delete
        from menu_song_map
        where menu_id = #{menuId}
    </delete>

</mapper>