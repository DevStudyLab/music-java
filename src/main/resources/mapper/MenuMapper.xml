<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nbpt.music.mapper.MenuMapper">

    <resultMap id="menuMap" type="cn.edu.nbpt.music.pojo.entity.Menu">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="image" column="image"/>
        <result property="description" column="description"/>
        <result property="createTime" column="create_time"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <resultMap id="userMap" type="cn.edu.nbpt.music.pojo.entity.User">
        <id property="id" column="user_id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="avatar" column="avatar"/>
    </resultMap>

    <resultMap id="menuUserMap" type="cn.edu.nbpt.music.pojo.vo.MenuUserVo" extends="menuMap">
        <association property="user" resultMap="userMap"/>
    </resultMap>

    <select id="list" resultMap="menuUserMap">
        select * from menu
        left join user on menu.user_id = user.id
        <where>
            <if test="id != null">
                menu.id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="startTime != null">
                and create_time &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                and create_time &lt;= #{endTime}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
    </select>

    <insert id="add">
        insert into menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">
                name,
            </if>
            <if test="image != null and image != ''">
                image,
            </if>
            <if test="description != null and description != ''">
                description,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="userId != null">
                user_id,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">
                #{name},
            </if>
            <if test="image != null and image != ''">
                #{image},
            </if>
            <if test="description != null and description != ''">
                #{description},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
        </trim>
    </insert>

    <update id="update">
        update menu
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from menu
        where id in
        <foreach collection="ids" item="ids" open="(" close=")" separator=",">
            #{ids}
        </foreach>
    </delete>
</mapper>